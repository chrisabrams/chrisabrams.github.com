@import 'nib'

pre .keyword
  color #cb473c

pre code
  background linear-gradient(bottom, #fcfcfc, #f9f8f7) repeat
  border-top 1px solid #fafafa
  border-radius 2px
  font-family 'Menlo', monospace
  display block
  overflow-x scroll
  padding 12px 0
  text-shadow rgba(#fff, .4) 0 1px 0

p code
  background #f5f6f7
  padding 2px
  text-shadow rgba(#fff, .4) 0 1px 0



pre .string
  color #afc947