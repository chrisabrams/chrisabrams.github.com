<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width" />

  <!-- Site Properities -->
  <title><%= @getPreparedTitle() %></title>
  <meta name="description" content="<%= @getPreparedDescription() %>" />
  <meta name="keywords" content="<%= @getPreparedKeywords() %>" />

  <!-- DocPad Meta -->
  <%- @getBlock('meta').toHTML() %>

  <!-- DocPad Styles + Our Own -->
  <%- @getBlock('styles').add(@getGruntedStyles()).toHTML() %>

  <!-- Icons -->
  <!-- Favicon -->
  <link rel="shortcut icon" href="/favicon.ico" />
  <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
  <link rel="apple-touch-icon-precomposed" href="icons/apple-touch-icon-57x57-precomposed.png" />
  <!-- For first- and second-generation iPad: -->
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="icons/apple-touch-icon-72x72-precomposed.png" />
  <!-- For iPhone with high-resolution Retina display: -->
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="icons/apple-touch-icon-114x114-precomposed.png" />
  <!-- For third-generation iPad with high-resolution Retina display: -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="icons/apple-touch-icon-144x144-precomposed.png" />
</head>
<body>

  <div class="container">
    <header>
        <i></i>
        <h1><a href="http://chrisabrams.com">Chris Abrams</a> <span>Front-end Engineer</span></h1>
        
        <section class="links">
          <a class="icon icon-github" href="#">View my projects at Github</a>
          <a class="icon icon-rss" href="#">Subscribe my RSS feed</a>
          <%- @getTwitterFollowButton() %>

        </section>
    </header>
    <section class="content">
      <article>
        <header>
          <h1><a href="<%= @document.url %>"><%= @document.title %></a></h1>
          <time datetime="<%= @document.datetime %>" pubdate><%= @document.datestring %></time>
          <div class="social-buttons">
            <%- @getTwitterTweetButton() %>
            <%- @getFacebookLikeButton() %>
            <%- @getGooglePlusOneButton() %>
          </div>
        </header>
        <text render="markdown"><%- @content %></text>
        <footer>
        <%- @getDisqus() %>
        </footer>
      </article>
      
    </section>

    <footer>&copy; Copyright 2013 Chris Abrams. All rights reserved.</footer>
  </div>

  <!-- DocPad Scripts + Our Own -->
  <%- @getBlock('scripts').add(@getGruntedScripts()).toHTML() %>
</body>
</html>